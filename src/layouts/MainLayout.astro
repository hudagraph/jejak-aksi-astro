---
import '../styles/global.css';

const { title = "Jejak Aksi â€” Melangkah Bersama" } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>

        <!-- Google Analytics (GA4) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-P6SSEY9KBG" is:inline></script>
        <script is:inline>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-P6SSEY9KBG');
        </script>
        
        <!-- NETLIFY IDENTITY WIDGET (WAJIB ADA UTK CMS) -->
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=PT+Serif:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />

        <!-- Script Animasi & Redirect Netlify Identity -->
        <script>
            // 1. Logic Animasi Reveal
            const observerOptions = { threshold: 0.12 };
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            const els = document.querySelectorAll('.reveal');
            els.forEach(el => observer.observe(el));
            
            setTimeout(()=>{
                const hero = document.querySelector('#hero .container');
                if(hero) hero.classList.add('is-visible');
            }, 120);

            // 2. Logic Redirect Netlify Identity (Agar habis login langsung masuk admin)
            if (window.netlifyIdentity) {
                window.netlifyIdentity.on("init", user => {
                if (!user) {
                    window.netlifyIdentity.on("login", () => {
                        document.location.href = "/admin/";
                    });
                }
                });
            }
        </script>
	</body>
</html>