---
// src/components/Cerita.astro
// Kita tidak perlu getCollection di sini lagi karena data dikirim dari index.astro
const { data } = Astro.props;
---

<section id="cerita" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-800">Cerita Relawan</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Kisah inspiratif dari balik layar kegiatan kami.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {data.map((post) => (
        <article class="flex flex-col group">
           <a href={`/cerita/${post.slug}`} class="block overflow-hidden rounded-xl mb-4 h-60">
             <img 
               src={post.data.image} 
               alt={post.data.title} 
               class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
             />
           </a>
           
           <div class="flex flex-col flex-1">
             <div class="flex items-center gap-2 text-sm text-gray-500 mb-2">
                <span>{new Date(post.data.pubDate).toLocaleDateString('id-ID', { dateStyle: 'long' })}</span>
                <span>â€¢</span>
                <span class="text-primary font-medium">{post.data.author}</span>
             </div>
             
             <h3 class="text-xl font-bold mb-3 leading-tight">
               <a href={`/cerita/${post.slug}`} class="hover:text-primary transition-colors">
                 {post.data.title}
               </a>
             </h3>
             
             <p class="text-gray-600 line-clamp-3 mb-4 text-sm flex-1">
               {post.data.description}
             </p>
           </div>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a
        href="/cerita"
        class="inline-block px-8 py-3 bg-white border border-gray-300 text-gray-700 font-medium rounded-full hover:bg-gray-50 hover:border-gray-400 transition-all"
      >
        Baca Cerita Lainnya
      </a>
    </div>
  </div>
</section>