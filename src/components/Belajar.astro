---
import { getCollection } from 'astro:content';

// Ambil data dari folder 'belajar'
const items = await getCollection('belajar');
---

<section id="belajar" class="py-16 border-t border-gray-100">
  <div class="max-w-6xl mx-auto px-4 reveal">
    <h2 class="font-heading text-3xl font-semibold title-accent">Belajar</h2>
    <p class="text-gray-600">E-course, e-learning, dan e-book terbaru.</p>
    
    <div class="mt-6 grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
      {items.map((it) => (
        <article class="card rounded-2xl overflow-hidden bg-white border">
          <img src={it.data.image} alt={it.data.title} class="w-full h-44 object-cover" loading="lazy" />
          <div class="p-5">
            <div class="chip chip-comp3">{it.data.tag}</div>
            <h3 class="font-heading font-semibold text-lg text-primary mt-2">{it.data.title}</h3>
            <p class="text-sm text-gray-700 mt-2">{it.data.description}</p>
            
            {/* Opsi: Jika mau link ke detail, buat folder src/pages/belajar/[slug].astro nanti */}
            {it.data.link && (
                <a href={it.data.link} class="text-sm font-semibold text-primary mt-3 inline-block hover:underline">
                    Akses Materi â†’
                </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>