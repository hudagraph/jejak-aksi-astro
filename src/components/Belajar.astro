---
// src/components/Belajar.astro
const { data } = Astro.props;

// Format tanggal biar rapi
const formatDate = (date) => {
  return new Date(date).toLocaleDateString('id-ID', {
    day: 'numeric', month: 'long', year: 'numeric'
  });
};
---

<section id="belajar" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4 text-gray-800">Ruang Belajar</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Materi edukasi dan wawasan baru untuk pengembangan diri relawan.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {data.map((item) => (
        <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all border border-gray-100 flex flex-col h-full">
          {/* Gambar Thumbnail */}
          <a href={`/belajar/${item.slug}`} class="block h-48 overflow-hidden bg-gray-200">
            <img 
              src={item.data.image || '/images/placeholder-belajar.jpg'} 
              alt={item.data.title}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </a>

          {/* Konten */}
          <div class="p-6 flex flex-col flex-1">
            <div class="text-xs font-semibold text-primary mb-2 uppercase tracking-wider">
              {item.data.category || 'Edukasi'}
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-800 leading-tight">
              <a href={`/belajar/${item.slug}`} class="hover:text-primary transition-colors">
                {item.data.title}
              </a>
            </h3>
            <p class="text-gray-600 text-sm line-clamp-3 mb-4 flex-1">
              {item.data.description}
            </p>
            
            <div class="border-t pt-4 mt-auto flex justify-between items-center text-sm text-gray-500">
              <span>{formatDate(item.data.pubDate)}</span>
              <a href={`/belajar/${item.slug}`} class="text-primary font-medium hover:underline">Baca Materi â†’</a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 text-center">
      <a
        href="/belajar"
        class="inline-block px-8 py-3 bg-white border border-gray-300 text-gray-700 font-medium rounded-full hover:bg-gray-50 hover:border-gray-400 transition-all"
      >
        Lihat Semua Materi
      </a>
    </div>
  </div>
</section>