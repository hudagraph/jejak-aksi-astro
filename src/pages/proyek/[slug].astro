---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('proyek');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<MainLayout title={`${post.data.title} - Proyek Jejak Aksi`}>
  <article class="pt-24 pb-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="mb-8 text-center">
        <span class="text-primary font-semibold tracking-wider uppercase text-sm">
          {post.data.category || 'Proyek Sosial'}
        </span>
        <h1 class="text-3xl md:text-5xl font-bold mt-2 mb-4 text-gray-900 leading-tight">
          {post.data.title}
        </h1>
        <p class="text-gray-500">
          Diposting pada {new Date(post.data.pubDate).toLocaleDateString('id-ID', { dateStyle: 'long' })}
        </p>
      </div>

      <div class="rounded-2xl overflow-hidden shadow-lg mb-10 aspect-video bg-gray-100">
        <img 
          src={post.data.image} 
          alt={post.data.title} 
          class="w-full h-full object-cover"
        />
      </div>

      <div class="prose prose-lg prose-blue mx-auto max-w-none text-gray-700">
        <Content />
      </div>

      <div class="mt-12 pt-8 border-t border-gray-100 text-center">
        <a href="/proyek" class="inline-flex items-center text-gray-600 hover:text-primary transition-colors font-medium">
          ‚Üê Kembali ke Daftar Proyek
        </a>
      </div>
    </div>
  </article>
</MainLayout>